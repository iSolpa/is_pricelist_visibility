<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add pricelist prices display to product variant form view -->
    <record id="product_variant_easy_edit_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <!-- Add pricelist prices below lst_price -->
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="pricelist_prices_display" readonly="1" nolabel="1" 
                       class="mt-2" invisible="not pricelist_prices_display"/>
                <field name="pricelist_prices_info" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Also add to standard product form view -->
    <record id="product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.normal.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <!-- Add pricelist prices below lst_price -->
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="pricelist_prices_display" readonly="1" nolabel="1" 
                       class="mt-2" invisible="not pricelist_prices_display"/>
                <field name="pricelist_prices_info" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
