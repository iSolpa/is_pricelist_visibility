<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add pricelist prices display to product variant easy edit view -->
    <record id="product_variant_easy_edit_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="pricelist_prices_display" string="Other Pricelists"
                       readonly="1" widget="html"
                       invisible="not pricelist_prices_display"/>
            </xpath>
        </field>
    </record>

    <!-- Add pricelist prices display to standard product form view -->
    <record id="product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.normal.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='product_details']" position="after">
                <div class="row mt-2 ms-2" invisible="not pricelist_prices_display">
                    <label for="pricelist_prices_display" string="Other Pricelists" class="col-auto fw-bold text-muted"/>
                    <div class="col">
                        <field name="pricelist_prices_display" readonly="1" nolabel="1" widget="html"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
