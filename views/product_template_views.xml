<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add pricelist prices display to product template form view -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='product_details']" position="after">
                <div class="row mt-2 ms-2" invisible="not pricelist_prices_display">
                    <label for="pricelist_prices_display" string="Other Pricelists" class="col-auto fw-bold text-muted"/>
                    <div class="col">
                        <field name="pricelist_prices_display" readonly="1" nolabel="1" widget="html"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
